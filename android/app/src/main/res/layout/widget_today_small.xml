<?xml version="1.0" encoding="utf-8"?>
<!--
  widget_today_small.xml â€” Small widget layout (1x1 or 2x1)
  Shows: Header + next event OR empty state
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Single row -->
    <LinearLayout
        android:id="@+id/widget_row1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/widget_row1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#007AFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_row1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- More count -->
    <TextView
        android:id="@+id/widget_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#8E8E93"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>
