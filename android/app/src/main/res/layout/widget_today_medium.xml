<?xml version="1.0" encoding="utf-8"?>
<!--
  widget_today_medium.xml â€” Medium widget layout (2x2 or 4x1)
  Shows: Header + up to 3 event rows + "+N more"
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Row 1 -->
    <LinearLayout
        android:id="@+id/widget_row1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/widget_row1_time"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:maxLines="1" />

        <View
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:background="#007AFF" />

        <TextView
            android:id="@+id/widget_row1_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:id="@+id/widget_row2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_row2_time"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:maxLines="1" />

        <View
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:background="#007AFF" />

        <TextView
            android:id="@+id/widget_row2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:id="@+id/widget_row3_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_row3_time"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:maxLines="1" />

        <View
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:background="#007AFF" />

        <TextView
            android:id="@+id/widget_row3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- More count -->
    <TextView
        android:id="@+id/widget_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#8E8E93"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>
