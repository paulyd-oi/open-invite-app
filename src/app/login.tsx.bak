const { width: SCREEN_WIDTH, height: SCREEN_HEIGHT } = Dimensions.get("window");

// Same styling as onboarding
const ACCENT_COLOR = "#E85D4C";
const ACCENT_LIGHT = "#FF8A7A";
const BACKGROUND_DARK = "#0D0D0D";
